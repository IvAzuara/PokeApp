@model PokeApp.Models.PokemonIndex

<nav aria-label="Paginación">
    <ul class="pagination flex-wrap">
        <li class="page-item @(Model.IsFirstPage ? "disabled" : "")">
            <a class="page-link" href="?page=1&pageSize=@Model.PageSize" title="Primera">«</a>
        </li>
        <li class="page-item @(Model.IsFirstPage ? "disabled" : "")">
            <a class="page-link" href="?page=@(Model.Page - 1)&pageSize=@Model.PageSize" title="Anterior">‹</a>
        </li>

        @if (Model.ShowFirstPage)
        {
            <li class="page-item">
                <a class="page-link" href="?page=1&pageSize=@Model.PageSize">1</a>
            </li>
        }
        @if (Model.ShowStartEllipsis)
        {
            <li class="page-item disabled"><span class="page-link">…</span></li>
        }

        @for (int i = Model.WindowStart; i <= Model.WindowEnd; i++)
        {
            <li class="page-item @(i == Model.Page ? "active" : "")">
                <a class="page-link" href="?page=@i&pageSize=@Model.PageSize">@i</a>
            </li>
        }

        @if (Model.ShowEndEllipsis)
        {
            <li class="page-item disabled"><span class="page-link">…</span></li>
        }
        @if (Model.ShowLastPage)
        {
            <li class="page-item">
                <a class="page-link" href="?page=@Model.TotalPages&pageSize=@Model.PageSize">@Model.TotalPages</a>
            </li>
        }

        <li class="page-item @(Model.IsLastPage ? "disabled" : "")">
            <a class="page-link" href="?page=@(Model.Page + 1)&pageSize=@Model.PageSize" title="Siguiente">›</a>
        </li>
        <li class="page-item @(Model.IsLastPage ? "disabled" : "")">
            <a class="page-link" href="?page=@Model.TotalPages&pageSize=@Model.PageSize" title="Última">»</a>
        </li>
    </ul>
</nav>