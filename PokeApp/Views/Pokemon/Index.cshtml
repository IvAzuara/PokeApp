@model PokeApp.Models.PokemonIndex

@{
    ViewData["Title"] = "Pokédex";
}

<h2 class="mb-4">Pokédex</h2>

<div class="d-flex justify-content-between align-items-center mb-4">
    <form method="get" action="" class="d-flex gap-2 align-items-center flex-wrap">

        @* Buscador por nombre *@
        <input type="text"
               name="search"
               value="@Model.Search"
               placeholder="Buscar por nombre..."
               class="form-control w-auto"
               autocomplete="off" />
        <button type="submit" class="btn btn-primary">Buscar</button>

        @* Dropdown de especie *@
        <div class="position-relative" id="speciesDropdown">

            <button type="button"
                    class="btn btn-outline-secondary"
                    id="speciesToggle">
                @(string.IsNullOrEmpty(Model.Species) ? "Filtrar por especie" : Model.Species)
            </button>

            <div id="speciesPanel"
                class="border rounded bg-white shadow position-absolute z-3"
                style="display:none; min-width:220px; top:100%; left:0">

                <div class="p-2 border-bottom">
                    <input type="text"
                        id="speciesSearch"
                        class="form-control form-control-sm"
                        placeholder="Buscar especie..."
                        autocomplete="off" />
                </div>

                <ul id="speciesList"
                    class="list-group list-group-flush mb-0"
                    style="max-height:200px; overflow-y:auto">
                    <li class="list-group-item text-muted small">Abriendo...</li>
                </ul>

                @if (!string.IsNullOrEmpty(Model.Species))
                {
                    <div class="p-2 border-top">
                        <a href="/?pageSize=@Model.PageSize" class="btn btn-sm btn-outline-danger w-100">
                            Quitar filtro
                        </a>
                    </div>
                }
            </div>

        </div>

        @if (!string.IsNullOrEmpty(Model.Search) || !string.IsNullOrEmpty(Model.Species))
        {
            <a href="/Pokemon?pageSize=@Model.PageSize" class="btn btn-outline-secondary">Limpiar</a>
        }

    </form>

    @* Botón exportar *@
    <button onclick="exportarExcel(this)" 
            class="btn btn-success"
            data-page="@Model.Page"
            data-search="@Model.Search">
        Exportar Excel
    </button>

    <button onclick="enviarExcel(this)"
            class="btn btn-primary"
            data-page="@Model.Page"
            data-search="@Model.Search">
        Enviar por correo
    </button>

</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Imagen</th>
            <th>Nombre</th>
            <th>Especie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pokemon in Model.Pokemons)
        {
            <tr>
                <td>@pokemon.Id</td>
                <td>
                    @if (!string.IsNullOrEmpty(pokemon.SpriteUrl))
                    {
                        <img src="@pokemon.SpriteUrl"
                             alt="@pokemon.name"
                             width="64" height="64" />
                    }
                </td>
                <td class="text-capitalize">@pokemon.name</td>
                <td class="text-capitalize">@pokemon.Species</td>
            </tr>
        }
    </tbody>
</table>

@if (string.IsNullOrEmpty(Model.Search))
{
    <div class="d-flex align-items-center gap-3 mt-3">

        @* Paginación *@
        <partial name="_Pagination" model="Model" />

        @* Dropdown tamaño *@
        <div class="d-flex align-items-center gap-2 ms-auto">
            <label class="form-label mb-0 text-nowrap">Pokémon por página:</label>
            <select class="form-select form-select-sm w-auto"
                    onchange="window.location.href='?page=1&pageSize=' + this.value">
                @foreach (var size in Model.PageSizeOptions)
                {
                    @if (size == Model.PageSize)
                    {
                        <option value="@size" selected="selected">@size</option>
                    }
                    else
                    {
                        <option value="@size">@size</option>
                    }
                }
            </select>
        </div>
    </div>
}
