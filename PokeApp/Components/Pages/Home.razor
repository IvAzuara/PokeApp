@page "/"
@using Models.Pokemon
@inherits HomeBase

<MudDataGrid T="PokemonListItem"
             ServerData="LoadServerData"
             RowsPerPage="10"
             Hover="true"
             Bordered="true">
    <Columns>
        <PropertyColumn Title="#" Property="x => x.Id" />
        <PropertyColumn Title="Nombre" Property="x => x.name" />
        <TemplateColumn Title="Imagen">
            <CellTemplate>
                <img src="@($"https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/{context.Item.Id}.png")"
                     width="48" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>

<MudPagination Color="Color.Primary" Count="4" @bind-Selected="@_selected" />

<MudText Align="Align.Center">Selected page: @_selected</MudText>

